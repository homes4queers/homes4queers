<h1>Listing <%= @listing.id %></h1>
<div class="info">

  <%= @listing.name %><br>
</div>
<div class="about_me">
  <%= @listing.description %>
</div>

<hr>
<h4>User Comments</h4>
<div class="new comment">
  <%= render :partial => 'comments/comment_form' %>
</div>
<hr>
<% @listing.comments.each do |c| %>
  <div class="show comment">
    <b><%= c.user.name %> says: </b><br>
    <%= c.body %><br>
    <%= c.created_at.to_formatted_s(:long) %>
    <hr>
  </div>
<% end %>
