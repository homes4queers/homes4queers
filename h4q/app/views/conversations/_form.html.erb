<%= form_for :conversation, url: :conversations, html: {class: ""} do |f| %>
  <div class="field">
    <%= f.label :recipients %>
    <%= f.select(:recipients, User.all.collect {|p| [p.name, p.id]}, {}, {multiple: true}) %>
  </div>
  <div class="field">
    <%= f.label :subject %>
    <%= f.text_field :subject, placeholder: "Subject" %>
  </div>
  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :body, placeholder: "Type your message here" %>
  </div>

  <%= f.submit "Send Message" %>
<% end %>
