<% if @listing.errors.any? %>
  <div class="error_explanation">
    <h2>
      <%= pluralize(@listing.errors.count, "error")  %>
      prohibited this listing from being saved:
    </h2>
    <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div id="listing-form">
    <%= form_for @listing do |f| %>
    <div class="large-6 columns">
      <div class="field">
        <%= f.label :name, "Title" %><br>
        <%= f.text_field :name %><br>
      </div>
      <div class="field">
        <%= f.label :description, "Information" %><br>
        <%= f.text_area :description %><br>
      </div>

    <div class="row">
      <div class="small-6 columns field">
        <%= f.label :price, "Price per month" %><br>
        <%= f.number_field :price %><br>
      </div>
      <div class="small-6 columns field">
        <%= f.label :bedrooms, 'How many available bedrooms?'%><br>
        <%= f.number_field :bedrooms %><br>
      </div>
    </div>

    </div>
    <div class="large-6 columns">
      <div class="field">
        <%= f.label :location, "Address (or area)" %><br>
        <%= f.text_field :location %><br>
      </div>
      <div class="field">
        <%= f.label :rent_date, "Available From" %><br>
        <%= f.date_field :rent_date %><br>
      </div>

      <div class="field">
        <%= f.label :roomates, 'Are you looking for a roomate?' %>
        <%= f.check_box :roomates %>
      </div>
      <div class="field">
        <%= f.label :basement, 'Is this a basement apartment?' %>
        <%= f.check_box :basement %>
      </div>

      <div class="field">
        <%= f.label :sublet, "Are you subletting?" %>
        <%= f.check_box :sublet %><br>
      </div>

      <div class="field">
        <% f.fields_for :images do |photo| %>
        <%= render 'image_fields', f: photo %>
        <% end %>
        <%= link_to_add_association "Add a Photo", f, :images %>
      </div>
    </div>
    <div class="action">
      <%= f.submit "Submit Listing", class:"button pink" %>
    </div>

    <% end %>
  </div>
</div>
