<% if @listing.errors.any? %>
  <div class="error_explanation">
    <h2>
      <%= pluralize(@listing.errors.count, "error")  %>
      prohibited this listing from being saved:
    </h2>
    <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<div id="listing-form">
  <%= form_for @listing do |f| %>

    <div class="radio_buttons">
      <p>
        This listing is for:
      </p>
      <div class="field">
        <%= f.radio_button :space_type, "shared_space" %>
        <%= f.label :space_type, "A room in a shared space", :value => "shared_space" %>
        <%= f.radio_button :space_type, "full_space" %>
        <%= f.label :space_type, "A full private space", :value => "full_space" %>
      </div>
    </div>

    <br>

    <div class="field">
      <% f.fields_for :images do |photo| %>
      <%= render 'image_fields', f: photo %>
      <% end %>
      <%= link_to_add_association "Add a Photo", f, :images %>
    </div>

    <br>

    <div class="field">
      <%= f.label :name, "Title" %><br>
      <%= f.text_field :name %><br>
    </div>

    <div class="field">
      <%= f.label :price, "Price per month" %><br>
      <%= f.number_field :price %><br>
    </div>

    <div class="field">
      <%= f.check_box :utilities_included %>
      <%= f.label :utilities_included, "includes utilities" %>
    </div>

    <div class="field">
      <%= f.label :description, "Information" %><br>
      <%= f.text_area :description %><br>
    </div>

    <div class="field">
      <%= f.label :bedrooms, 'How many available bedrooms?'%><br>
      <%= f.number_field :bedrooms %><br>
    </div>

    <div class="field">
