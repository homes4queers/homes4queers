<% if @listing.errors.any? %>
  <div class="error_explanation">
    <h2>
      <%= pluralize(@listing.errors.count, "error")  %>
      prohibited this listing from being saved:
    </h2>
    <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div id="listing-form">
    <%= form_for @listing do |f| %>
    <div class="large-6 columns">
      <div class="radio_buttons">
        <p>
          This listing is for:
        </p>
        <div class="field">
          <%= f.radio_button :space_type, "shared_space", class: "radio-button" %>
          <%= f.label :space_type, "A room in a shared space", :value => "shared_space",class: "1-radio-button-label rb" %>
          <%= f.radio_button :space_type, "full_space", class: "radio-button"  %>
          <%= f.label :space_type, "A full private space", :value => "full_space", class: "2-radio-button-label rb" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :name, "Title" %>
        <%= f.text_field :name %><br>
      </div>
      <div class="field">
        <%= f.label :description, "Information" %>
        <%= f.text_area :description %><br>
      </div>
    <div class="row">
      <div class="large-6 medium-6 columns field">
        <%= f.label :price, "Price per month" %>
        <%= f.number_field :price %><br>
      </div>
      <div class="large-6 medium-6 columns field">
        <%= f.label :bedrooms, 'How many available bedrooms?'%>
        <%= f.number_field :bedrooms %><br>
      </div>
    </div>
      <div class="field">
        <%= f.label :rent_date %>
        <%= f.date_field :rent_date %>
      </div>
      <div class="field">
        <%= f.label :location %>
        <%= f.text_field :location %>

      </div>
      <div class="field">
        <% f.fields_for :images do |photo| %>
        <%= render 'image_fields', f: photo %>
        <% end %>
        <%= link_to_add_association "Add a Photo", f, :images, class: "button orange" %>
      </div>
    </div>

    <br>

    <p>
      Features and Amenities (click all that apply):
    </p>

<div class="large-6 columns">

  <div class="checkboxes">

    <ul>
    <div class="row">
      <div class="large-6 medium-6 columns">
