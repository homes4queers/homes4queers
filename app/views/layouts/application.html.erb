<!DOCTYPE html>
<html>
<head>
  <title>H4q</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyC49SZwfsHvdzEkLGZJClMzXunKm4kZ5YQ" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<div class="user_nav">
  <% if current_user %>
    Logged in as <%= link_to current_user.name, user_path(current_user) %><br>
    <%= link_to 'Logout', :logout, method: :post %><br>
    <%= link_to 'Add a listing', new_listing_path  %><br>
    <%= link_to 'My Favourites', user_favourites_path(current_user) %>
  <% else %>
    <%= link_to 'Register', new_user_path %>
    <%= link_to 'Login', :login %>
  <% end %>
</div>
<div>
   <p id="notice"><%= flash[:notice] %></p>
   <p id="alert"><%= flash[:alert] %></p>
 </div>
 <div class="nav">
   <%= link_to 'Home', :root %>
   <%= link_to 'Users', users_path %>
 </div>

<%= yield %>

</body>
</html>
