</div>

  <div class="radio_buttons">
    <div class="field">
      <%= f.radio_button :smoking, "smoking", class: "check-box"  %>
      <%= f.label :smoking, "Smoking OK", :value => "smoking", class: "5-radio-button-label rb"   %>
      <%= f.radio_button :smoking, "nonsmoking", class: "check-box" %>
      <%= f.label :smoking, "Non-Smoking", :value => "nonsmoking", class: "6-radio-button-label rb"   %>
    </div>
  </div>
  <br>
  <div class="action">
    <%= f.submit "Submit Listing", class:"button pink" %>
  </div>
</div>


  </div>
