<h1>Everyone</h1>

<div class="searchbar">
  <%= form_tag users_path, method: :get, authentification: false, id: 'search-form' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<% if @users.any? %>
  <% @users.each do |usr| %>
  <div class="user">
    <%= link_to user_path(usr) do %>
    <%= image_tag usr.avatar.thumb, class: "profile_pic", alt: "Profile picture thumbnail" %><br>
    <%= usr.name %>
    <% end %>
  </div>

  <% end %>
<% end %>
