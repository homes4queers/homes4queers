<h1>Listing <%= @listing.id %></h1>
<div class="info">
  <%# @lisitng.photo %>
  <%= @listing.name %><br>
</div>
<div class="about_me">
  <%= @listing.description %>
</div>

<hr>
<h4>User Comments</h4>
<div class="new comment">
  <%= render :partial => 'comments/comment_form' %>
</div>
<hr>
<% @listing.comments.each do |c| %>
<div class="show comment">
  <%= c.user.name %> says: </p>
  <%= c.body %>
</div>
<% end %>
